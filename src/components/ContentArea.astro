---
export interface Props {
	as?: string;
	class?: string;
	width?: "thin" | "normal" | "wide";
}

const {
	as: As = "div",
	class: className,
	width = "normal",
	...rest
} = Astro.props;
---

<As class:list={["content-area", `content-area-${width}`, className]} {...rest}>
	<slot />
</As>

<style>
	.content-area {
		padding: 0 2rem;
		max-width: 100%;
		margin: auto;
	}

	.content-area-thin {
		width: var(--sizeContentAreaThin);
	}

	.content-area-normal {
		width: var(--sizeContentAreaNormal);
	}

	.content-area-wide {
		width: var(--sizeContentAreaWide);
	}
</style>
